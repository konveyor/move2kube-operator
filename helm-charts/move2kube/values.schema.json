{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "deployment": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "api": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "imageTag": {
                            "type": "string"
                        },
                        "replicas": {
                            "type": "integer"
                        },
                        "privilegedPods": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "imageTag",
                        "privilegedPods",
                        "replicas"
                    ]
                },
                "ui": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "imageTag": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "imageTag"
                    ]
                }
            },
            "required": [
                "api",
                "ui"
            ]
        },
        "ingress": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "preferRoute": {
                    "type": "boolean"
                },
                "domainName": {
                    "type": "string"
                },
                "tlsSecret": {
                    "type": "string"
                }
            },
            "required": [
                "domainName",
                "enable",
                "preferRoute",
                "tlsSecret"
            ]
        },
        "persistentVolumeClaim": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "createNew": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "storageClass": {
                    "type": "string"
                },
                "storageSize": {
                    "type": "string"
                }
            },
            "required": [
                "createNew",
                "enable",
                "name",
                "storageClass",
                "storageSize"
            ]
        },
        "secret": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "createNew": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "auth": {
                    "type": "string"
                }
            },
            "required": [
                "createNew",
                "enable",
                "name",
                "auth"
            ]
        },
        "securityContextContraints": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enable": {
                    "type": "boolean"
                }
            },
            "required": [
                "enable"
            ]
        },
        "serviceAccount": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "createNew": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "auth": {
                    "type": "string"
                }
            },
            "required": [
                "createNew",
                "enable",
                "name"
            ]
        }
    },
    "required": [
        "deployment",
        "ingress",
        "persistentVolumeClaim",
        "secret",
        "securityContextContraints",
        "serviceAccount"
    ]
}